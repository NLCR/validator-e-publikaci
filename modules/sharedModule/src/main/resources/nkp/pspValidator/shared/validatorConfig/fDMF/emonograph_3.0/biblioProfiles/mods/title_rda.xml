<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<metadataProfile
        xmlns="http://www.nkp.cz/validatorEpublikaci/2.3/metadataProfile"
        name="MODS title of multivolume monograph (RDA)"
        validatorVersion="2.3"
        dmf="emonograph_3.0"
>

    <info>
        <text>DMF Elektronické publikace (monografie) 3.0  očekává MODS verze 3.6. Dále se zde upřesňují očekávaná metadata pro titul
            vícesvazkové monografie pro záznamy zpracované podle katalogizačních pravidel RDA.
        </text>
        <url>http://www.loc.gov/standards/mods/</url>
        <url description="XSD pro MODS 3.6">http://www.loc.gov/standards/mods/v3/mods-3-6.xsd</url>
        <url description="popis MODS 3.6">http://www.loc.gov/standards/mods/mods-outline-3-6.html</url>
    </info>

    <namespaces>
        <namespace prefix="mods">http://www.loc.gov/mods/v3</namespace>
    </namespaces>

    <dictionaries>
        <dictionary name="marcRelatorCodes"
                    description="kódy rolí podle MARC21"
                    url="http://www.loc.gov/marc/relators/relaterm.html"/>
        <dictionary name="iso6392languageCodes"
                    description="kódy jazyků podle ISO 639-2"
                    url="http://www.loc.gov/standards/iso639-2/php/code_list.php"/>
        <dictionary name="siglaInstitutionCodes"
                    description="sigly knihoven"/>
    </dictionaries>

    <rootElement name="mods:mods">
        <expectedAttributes>
            <attribute name="ID">
                <expectedContent>
                    <regexp>MODS_TITLE_[0-9]{4}</regexp>>
                </expectedContent>
            </attribute>
        </expectedAttributes>
        <expectedElements>
            <element name="mods:titleInfo" mandatory="true">
                <expectedAttributes>
                    <attribute name="type" mandatory="false">
                        <expectedContent>
                            <oneOf>
                                <value>abbreviated</value>
                                <value>alternative</value>
                                <value>translated</value>
                                <value>uniform</value>
                            </oneOf>
                        </expectedContent>
                    </attribute>
                </expectedAttributes>
                <expectedElements>
                    <element name="mods:title" mandatory="true">
                        <expectedContent/>
                    </element>

                    <element name="mods:nonSort" mandatory="false">
                        <expectedContent/>
                    </element>

                    <element name="mods:subTitle" mandatory="false">
                        <expectedContent/>
                    </element>

                    <element name="mods:partNumber" mandatory="false">
                        <expectedContent/>
                    </element>

                    <element name="mods:partName" mandatory="false">
                        <expectedContent/>
                    </element>
                </expectedElements>
            </element>
            <element name="mods:name" specification="not(mods:etal)" mandatory="false">

                <expectedAttributes>
                    <attribute name="type" mandatory="false">
                        <expectedContent>
                            <oneOf>
                                <value>personal</value>
                                <value>corporate</value>
                                <value>conference</value>
                                <value>family</value>
                            </oneOf>
                        </expectedContent>
                    </attribute>
                    <attribute name="usage" mandatory="false">
                        <recommendedContent>
                            <value>primary</value>
                        </recommendedContent>
                    </attribute>
                </expectedAttributes>

                <expectedElements>

                    <element name="mods:namePart" specification="@type='date'" mandatory="false">
                        <expectedAttributes>
                            <attribute name="type"/>
                        </expectedAttributes>
                        <expectedContent>
                            <regexp>[0-9]{4}-[0-9]{4}</regexp>
                        </expectedContent>
                    </element>

                    <element name="mods:namePart" specification="@type='family'" mandatory="false">
                        <expectedAttributes>
                            <attribute name="type"/>
                        </expectedAttributes>
                        <expectedContent/>
                    </element>

                    <element name="mods:namePart" specification="@type='given'" mandatory="false">
                        <expectedAttributes>
                            <attribute name="type"/>
                        </expectedAttributes>
                        <expectedContent/>
                    </element>

                    <element name="mods:namePart" specification="@type='termsOfAddress'" mandatory="false">
                        <expectedAttributes>
                            <attribute name="type"/>
                        </expectedAttributes>
                        <expectedContent/>
                    </element>

                    <!--namePart obsahující celé jméno, nebo se nejedná o osobu-->
                    <element name="mods:namePart" specification="not(@type)" mandatory="false">
                        <expectedContent/>
                    </element>

                    <element name="mods:nameIdentifier" mandatory="false">                        
                        <expectedContent/>
                    </element>

                    <element name="mods:role" mandatory="false">
                        <expectedElements>
                            <element name="mods:roleTerm" mandatory="true">
                                <expectedAttributes>
                                    <attribute name="type" mandatory="true">
                                        <expectedContent>
                                            <value>code</value>
                                        </expectedContent>
                                    </attribute>
                                    <attribute name="authority" mandatory="true">
                                        <recommendedContent>
                                            <value>marcrelator</value>
                                        </recommendedContent>
                                    </attribute>
                                </expectedAttributes>
                                <recommendedContent>
                                    <fromDictionary name="marcRelatorCodes"/>
                                </recommendedContent>
                            </element>
                        </expectedElements>                                                
                    </element>



                </expectedElements>
            </element>

            <element name="mods:name" specification="mods:etal" mandatory="false" repeatable="false">
                <expectedElements>
                    <element name="mods:etal" repeatable="false">
                        <expectedContent/>
                    </element>
                </expectedElements>
