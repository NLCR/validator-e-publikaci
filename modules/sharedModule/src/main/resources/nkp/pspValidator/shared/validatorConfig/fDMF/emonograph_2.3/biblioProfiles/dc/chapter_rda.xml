<?xml version="1.0" encoding="UTF-8"?>
<metadataProfile
        xmlns="http://www.nkp.cz/validatorEpublikaci/2.2.3/metadataProfile"
        name="chapter (RDA)"
        validatorVersion="2.2.3"
        dmf="emonograph_2.3"
>

    <info>
        <text>DMF Elektronické publikace (monografie) 2.3 očekává Dublin Core verze 1.1. Dále se zde upřesňují očekávaná metadata pro vnitřní
            část typu kapitola pro záznamy zpracované podle katalogizačních pravidel RDA.
        </text>
        <url description="popis Dublin Core 1.1">http://dublincore.org/documents/dces/</url>
        <url description="XSD pro Dublin Core 1.1">http://www.openarchives.org/OAI/2.0/oai_dc.xsd</url>
    </info>

    <namespaces>
        <namespace prefix="oai_dc">http://www.openarchives.org/OAI/2.0/oai_dc/</namespace>
        <namespace prefix="dc">http://purl.org/dc/elements/1.1/</namespace>
    </namespaces>

    <dictionaries>
        <dictionary name="iso6392languageCodes"
                    description="kódy jazyků podle ISO 639-2"
                    url="http://www.loc.gov/standards/iso639-2/php/code_list.php"
        />
    </dictionaries>

    <rootElement name="oai_dc:dc">
        <expectedElements>

            <element name="dc:title"
                     errorMessage="Očekáván povinný element dc:title obsahující název kapitoly.">
                <expectedContent/>
            </element>

            <element name="dc:creator" mandatory="false">
                <expectedContent/>
            </element>

            <element name="dc:type" specification="text() = 'model:internalpart'"
                     errorMessage="Očekáván povinný element dc:type obsahující text 'model:internalpart'.">
                <expectedContent/>
            </element>

            <element name="dc:language" mandatory="false">
                <expectedContent>
                    <fromDictionary name="iso6392languageCodes"/>
                </expectedContent>
            </element>

            <element name="dc:format" specification="text() = 'electronic'"
                     errorMessage="Očekáván povinný element dc:format obsahující text 'electronic'.">
                <expectedContent/>
            </element>

            <element name="dc:description" specification="text() = 'born digital'"
                     errorMessage="Očekáván povinný element dc:description obsahující text 'born digital'.">
                <expectedContent/>
            </element>

            <element name="dc:description" mandatory="false">
                <expectedContent/>
            </element>

            <element name="dc:subject" mandatory="false">
                <expectedContent/>
            </element>

            <element name="dc:identifier" errorMessage="Očekáván alespoň jeden povinný element dc:identifier.">
                <expectedContent/>
            </element>

            <element name="dc:format" mandatory="false">
                <expectedContent/>
            </element>

            <element name="dc:coverage" mandatory="false">
                <expectedContent/>
            </element>

        </expectedElements>
    </rootElement>

</metadataProfile>

	